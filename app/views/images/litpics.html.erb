<div id="app">
 
  <div class="row" >
     <% @images.each do |image| %>
      <div class="col s12" data-imageid="<%= image.id %>">
       <h2 class="Sparkle" id="name" > <a href="/users/<%= image.user.id %>"><%= image.user.name %></a>  </h2>  
        <div class="card" class="showpic"> 
           <div class="card-image waves-effect waves-block waves-light">
            <a href="/images/<%= image.id %>">  <img class="activator" class="imgsize"  src="<%= image.url %> " style="object-fit: cover; max-height:800px;"></a> 
           </div>
               <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"> <%= image.title %>  
                  <i class="material-icons right">more_vert</i></span>
                  <p><a href="/images/<%= image.id %>"></a></p>
               </div>
        <div class="card-reveal">         
         <span class="card-title grey-text text-darken-4"><%= image.title %> <p> <i class="material-icons right">close</i></span>
               <% image.comments.each do |comment| %>
                 <ul>
                   <li><p class="index"><%= comment.user.name %> - <%= comment.text %> </p></li> 
                 </ul>
               <%end%>
        </div>
      </div>
      <star-rating v-on:click="RateFunction" v-model="rating"></star-rating> <p>Selected Rating: {{rating}}</p>
     </div>  
   <%end%>
  </div>
</div>




<style type="text/css">

  .imgsize {
    max-height: 100px;
    max-width: 100px;
    width: 90%;
    margin: 0 auto;
  }

</style>


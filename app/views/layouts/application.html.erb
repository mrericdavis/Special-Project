               <li><a class="font" href="/images/new">Upload A New Image</a></li>
          </ul>
      <ul class="side-nav" id="mobile-demo">
              <% if current_user %>
               <li><a class="font" href="/logout">Log Out</a></li>
               <li><a class="font" href="/profile">My Profile</a></li>
              <% else %>
               <li><a class="font" href="/login">Login</a></li>
               <li><a class="font" href="/signup">Signup</a></li>
               <li><a class="font" href="/">Home</a></li>
              <% end %>
               <li><a class="font" href="/users">People Getting Lit</a></li>
               <li><a class="font" href="/friends">Friends</a></li>
